@{
}
<input type="hidden" asp-for="Transaction.Id" />
<input type="hidden" asp-for="Transaction.SenderId" />
<input type="hidden" asp-for="Transaction.CreationDate" />
<div class="mb-3">
    <label class="form-label">Category</label>
    <select class="form-select" asp-for="Transaction.CategoryId" asp-items="@(new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name)))"></select>
</div>
<div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Transaction.Name">
    <span class="text-danger" asp-validation-for="Transaction.Name"></span>
</div>
<div class="mb-3">
    <label class="form-label">Description</label>
    <textarea class="form-control" rows="3" asp-for="Transaction.Description"></textarea>
</div>
<div class="mb-3">
    <label class="form-label">Date</label>
    <input type="date" class="form-control" asp-for="Transaction.Date">
</div>
<div class="mb-3">
    <label class="form-label">Recipient</label>
    <select class="form-select" asp-for="Transaction.RecipientId" asp-items="@(new SelectList(Model.Recipients, nameof(Person.Id), nameof(Person.Name)))"></select>
</div>
<div class="input-group mb-3">
    <input type="number" step=".01" class="form-control w-75" asp-for="Transaction.Amount">
    <select class="form-select" asp-for="Transaction.CurrencyId" asp-items="@(new SelectList(Model.Currencies, nameof(Currency.Id), nameof(Currency.Abbreviation)))"></select>
    <span class="text-danger" asp-validation-for="Transaction.Amount"></span>
</div>
<div class="mb-3">
    <label class="form-label">Note</label>
    <textarea class="form-control" rows="3" asp-for="Transaction.Note"></textarea>
</div>